@page "/"
@namespace CSM_Web.Pages
@using CSM_Data_Access.Utility

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var routeUrl = "";
    if (ViewContext.RouteData.Values.ContainsKey("path"))
        routeUrl = CUtility.Convert_To_String(ViewContext.RouteData.Values["path"]).ToLower();

    if (routeUrl.EndsWith("login"))
        Layout = "_Blank_Layout";
    else
        Layout = "_Layout";
}

<component type="typeof(App)" render-mode="ServerPrerendered" />
